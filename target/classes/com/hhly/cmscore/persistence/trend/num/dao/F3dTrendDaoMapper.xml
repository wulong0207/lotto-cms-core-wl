	<sql id="front_sql_statement_f3d_base_trend">
		SELECT
			tfb.issue,
			tfb.drawcode,
			tfb.b0,
			tfb.b1,
			tfb.b2,
			tfb.b3,
			tfb.b4,
			tfb.b5,
			tfb.b6,
			tfb.b7,
			tfb.b8,
			tfb.b9
		FROM
			trend_f3d_base tfb
	</sql>
	
	<!-- 从彩期表获取最近几期的期号 -->
	<sql id="findRecentIssueCode">
		SELECT
			issue_code
		FROM
			lottery_issue li
		WHERE
			li.lottery_code = #{lotteryCode}
		AND li.issue_code <![CDATA[ < ]]> (
			SELECT
				li.issue_code
			FROM
				lottery_issue li
			WHERE
				lottery_code = #{lotteryCode}
			AND current_issue = 1
			LIMIT 1
		)
		ORDER BY
			li.issue_code DESC
		LIMIT #{qryCount}
	</sql>
	
